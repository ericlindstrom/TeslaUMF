<div class="thread">
  <div class="threadDetails">
    <p class="threadDetails-title">{{name}}</p>
    <p class="threadDetails-author">{{postedby}}</p>
    <div class="threadDetails-urlName">{{urlname}}</div>
  </div>
  
  {{#comments}}
    <div class="comment">
      <div class="comment-authorDetails">
        <h4 class="comment-authorDetails-name">{{postedby}}</h4>
        <p class="comment-authorDetails-timeCreated">
          {{created}}
        </p>
      </div>
      <div class="comment-content">
        {{{content}}}
      </div>
    </div>
  {{/comments}}
</div>
